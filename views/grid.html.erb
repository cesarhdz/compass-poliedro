<% @title = "Basic Grid" %>


<pre>
	<code>@include poliedro-grid('.grid-a', 0, 12);</code>
</pre>

<section>
<% (1..12).each do |col| %>
	<% complement =  12 - col %>

	<div class="grid-a-<%= col %>">
		<p>Column <%= col  %></p>
	</div>

	<% if(complement > 0) %>
	<div class="grid-a-<%= complement %> grid-a-omega">
		<p>Column <%= complement  %></p>
	</div>
	<% end %>
<% end %>
</section><!-- .grid-1 -->

	