<% @title = "Grid" %>


<section class="grid-1">
<% (1..12).each do |col| %>
	<% complement =  12 - col %>

	<div class="col-<%= col %>">
		<p>Column <%= col  %></p>
	</div>

	<% if(complement > 0) %>
	<div class="col-<%= complement %> col-omega">
		<p>Column <%= complement  %></p>
	</div>
	<% end %>
<% end %>
</section><!-- .grid-1 -->

	